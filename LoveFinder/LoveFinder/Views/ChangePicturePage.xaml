<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoveFinder.Views.ChangePicturePage">
    <ContentPage.Content>
        <StackLayout Background="#1b1b1b">
            <Frame CornerRadius="20" Padding="0" Margin="50,5,50,10">
                <Image x:Name="picture" Source="placeholderport.png" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>
            <Button Style="{StaticResource Orangebtn}" x:Name="SetAsProfilePic" Text="Als profielfoto instellen" Clicked="SetAsProfilePic_Clicked" Margin="50,10,50,0"/>
            <Button Style="{StaticResource Orangebtn}" x:Name="DeletePic" Text="Foto verwijderen" Clicked="DeletePic_Clicked" Margin="50,10,50,0"/>
            <Button Style="{StaticResource Orangebtn}" x:Name="ReplacePic" Text="Foto vervangen" Clicked="ReplacePic_Clicked" Margin="50,10,50,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>